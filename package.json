{
  "name": "versete-biblice",
  "version": "1.0.0",
  "description": "Bible data parser and API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev:wrangler": "wrangler dev",
    "db:generate": "drizzle-kit generate",
    "db:push": "dotenv -e .env -- drizzle-kit push",
    "db:push:production": "dotenv -e .env.production -- drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "upload:translation": "dotenv -e .env -- tsx src/scripts/upload-translation.ts bibles/raw/ron-rccv.usfx.xml vdcc",
    "generate:docs-options": "dotenv -e .env -- tsx scripts/generate-docs-options.ts",
    "predeploy": "npm run generate:docs-options",
    "deploy": "wrangler deploy --minify",
    "push:env": "dotenv -e .env -- tsx src/scripts/push-env.ts production",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "bible",
    "api",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/mcp": "^0.1.4",
    "@hono/node-server": "^1.19.5",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.4",
    "@libsql/client": "^0.15.15",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@scalar/hono-api-reference": "^0.9.22",
    "@scalar/openapi-to-markdown": "^0.2.45",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.3",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@eslint/js": "^9.38.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.2",
    "wrangler": "^4.4.0"
  }
}
