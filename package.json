{
  "name": "versete-biblice",
  "version": "1.0.0",
  "description": "Bible data parser and API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev:wrangler": "dotenv -e .env -- wrangler dev",
    "db:generate": "drizzle-kit generate",
    "db:push": "dotenv -e .env -- drizzle-kit push",
    "db:push:production": "dotenv -e .env.production -- drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "upload:translation": "dotenv -e .env -- tsx src/scripts/upload-translation.ts bibles/raw/ron-rccv.usfx.xml vdcc",
    "generate:docs-options": "dotenv -e .env -- tsx scripts/generate-docs-options.ts",
    "generate:books": "dotenv -e .env -- bash -c 'curl -X POST \"http://localhost:8787/api/v1/admin/generate-all-books\" -H \"Authorization: Bearer $SYSTEM_TOKEN\"'",
    "generate:books:production": "dotenv -e .env.production -- bash -c 'curl -X POST \"https://versete-biblice.ro/api/v1/admin/generate-all-books\" -H \"Authorization: Bearer $SYSTEM_TOKEN\"'",
    "predeploy": "npm run generate:docs-options",
    "deploy:production": "wrangler deploy --minify",
    "push:env:production": "dotenv -e .env.production -- tsx src/scripts/push-env.ts production",
    "lint": "pnpm run type-check || eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "cf-typegen": "wrangler types"
  },
  "keywords": [
    "bible",
    "api",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alcyone-labs/modelcontextprotocol-sdk": "^1.16.0",
    "@hono/mcp": "^0.1.4",
    "@hono/node-server": "^1.19.5",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.4",
    "@libsql/client": "^0.15.15",
    "@scalar/hono-api-reference": "^0.9.22",
    "@scalar/openapi-to-markdown": "^0.2.45",
    "agents": "^0.2.17",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.10.3",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.2",
    "wrangler": "^4.4.0"
  }
}
